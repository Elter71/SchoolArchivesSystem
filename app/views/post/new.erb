<from class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-1" for="title">Tytuł:</label>
    <div class="col-sm-11">
      <input type="text" class="form-control" id="title" placeholder="Tytuł">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-1" for="opis">Opis:</label>
    <div class="col-sm-11">
    <textarea class="form-control" rows="4" cols="50" id="opis" placeholder="Opis">
    </textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-1" for="tag">Tagi:</label>
    <div class="col-sm-11">
      <input type="text" class="form-control" id="tag" placeholder="#EZN">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <input type="file" class="btn btn-primary" name="pic" accept="*" multiple>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <button type="submit" class="btn btn-default">Wyślij</button>
    </div>
  </div>
</from>
